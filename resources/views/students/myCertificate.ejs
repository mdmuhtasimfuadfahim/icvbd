<!-- Body Section -->

<section class="home-content py-20 -mt-60">
    <section class="ml-20 certificate_container py-20">

            <h1 class="heading"> Certificate Details </h1>
            <% if(empty){ %>
                <h1><%= empty%></h1>
                <h1 class="heading"> No certificate information at the moment. Contact your authority for further details  </h1>
            <% }else{ %>
            <form>
                <div class="row">
                
                    <h4 class="mb-10">'<%= certificate.university_name %>' Certiticate</h4>
                    
                    <div class="input-group input-group-icon">
                        <% if(certificate.isVerified === 'not_approved'){ %>
                        <h4 class="mt-2 ml-20" style="font-size: 16px">Your digital certificate has been created & waiting to be validated. You will get the ID once
                            it is validated and added to blockchain 
                        </h4>
                        <% } %>
                        
                        <% if(certificate.isVerified === 'approved'){ %>
                        <h4 class="mt-2 ml-20 " style="font-size: 16px">Congrats!!Your digital certificate has been created and added to blockchain </h4>
                        <% } %>
                        <span class="input-icon">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                    <% if(certificate.length){%>
                    <div class="input-group input-group-icon">
                        <h4 class="mt-2 ml-20">Your certificate ID: <%= certificate.uniqueID %></h4>
                        <span class="input-icon">
                            <i class="fa fa-envelope"></i>
                        </span>
                    </div>
                    <% }  %>
                    <div class="input-group input-group-icon">
                        <h4 class="mt-2 ml-20">Your Certificate was created at: <%= moment(certificate.created_at).format('DD:MM:YYYY') %></h4>
                        <span class="input-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </span>
                    </div>
                    <div class="input-group input-group-icon">
                        <h4 class="mt-2 ml-20">Your Major was in <%= certificate.major %></h4>
                        <span class="input-icon">
                            <i class="fas fa-id-card-alt"></i>
                        </span>
                    </div>
                    <div class="input-group input-group-icon">
                        <h4 class="mt-2 ml-20">Your minor was in <%= certificate.minor %></h4>
                        <span class="input-icon">
                            <i class="fas fa-university"></i>
                        </span>
                    </div>

                    
                    <ul class="list-disc text-2xl mt-10">
                        <li class="mb-5">University Name: <span class="font-bold"><%= certificate.university_name%></span></li>
                        <li class="mb-5">Full Name: <span class="font-bold"><%= certificate.full_name%></span></li>
                        <li class="mb-5">Required Credits: <span class="font-bold capitalize"><%= certificate.credit %></span></li>
                        <li class="mb-5">Date of Birth:<span class="font-bold"> <%= moment(certificate.dob).format('MMMM Do, YYYY') %></span></li>
                        <li class="mb-5">Required Credits: <span class="font-bold"><%= certificate.credit %></span></li>
                        <li class="mb-5">Date of Admission:<span class="font-bold"> <%= moment(certificate.doa).format('MMMM Do, YYYY') %></span></li>
                        <li class="mb-5">Date of Graduation<span class="font-bold"> <%= moment(certificate.dog).format('MMMM Do, YYYY') %></span></li>
                        <li class="mb-5">Father's Name: <span class="font-bold"><%= certificate.father_name.length ? '${certificate.father_name}': 'N/A'%></span></li>
                        <li class="mb-5">Mother's Name: <span class="font-bold"><%= certificate.mother_name? '${certificate.mother_name}': 'N/A'%></span></li>
                        
                        <!-- ... -->
                    </ul>
                    
                    
                        
                    </form>
                    
                   
                </div>
                
                <a class="float-right mt-10 text-2xl " href="/student/dashboard">Go Back</a>
            </form>
            <%}%>
        
        </section>
</section>