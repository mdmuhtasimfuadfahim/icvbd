    <!-- login section start -->
    <section class="login py-20" >

        <h3 class="sub-heading"> UGC login </h3>
        <h1 class="heading"> login to continue </h1>
    
        <% if(messages.error) { %>
            <span class="text-red-500 text-2xl font-bold"><%= messages.error %></span>
        <% } %>
        <form action="/ugc/login" method="POST">
            <div class="inputBox">
                <div class="input">
                    <label for="officialemail">your email</label>
                    <input id="officialemail" name="officialemail" value="<%= messages.officialemail %>"  type="email" placeholder="enter your email">
                </div>
                <div class="input">
                    <label for="password">your password</label>
                    <input name="password" id="password" type="password" placeholder="********************">
                </div>
            </div>
            <button type="submit" class="btn">Login</button>
            <a class="float-right mt-6" href="/login">Go Back</a>
        </form>
    
    </section>
    <!-- login section end -->