
<!-- login section start -->
    <section class="login py-20" >

        <h3 class="sub-heading"> other login </h3>
        <h1 class="heading"> login to continue </h1>
    
        <form action="/other/login" method="POST">
            <% if(messages.error) { %>
                <span class="text-red-500 text-2xl font-bold"><%= messages.error %></span>
            <% } %>
            <div class="inputBox">
                <div class="input">
                    <label for="officialemail">your email</label>
                    <input id="officialemail" name="officialemail" value="<%= messages.officialemail %>" type="text" placeholder="enter your email">
                </div>
                <div class="input">
                    <label for="password">your password</label>
                    <input name="password" id="password" type="password" placeholder="********************">
                </div>
            </div>
            <button type="submit" class="btn">Login</button>
            <a href="/other/registration">Don't have account?</a>
            <a href="/login" class="float-right mt-6">Go Back</a>
        </form>
    
    </section>
<!-- login section end -->
