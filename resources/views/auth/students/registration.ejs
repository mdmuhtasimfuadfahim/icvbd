    <!-- registration section start -->
    <section class="registration py-20" >

        <h3 class="sub-heading"> student registration </h3>
        <h1 class="heading"> do your registration </h1>
        
        <form action="/student/registration" method="POST">
            <% if(messages.error) { %>
                <span class="text-red-500 text-2xl font-bold"><%= messages.error %></span>
            <% } else { %>
                <span class="text-green-500 text-2xl font-bold"><%= messages.success %></span>
            <% } %>
            <div class="inputBox">
                <div class="input">
                    <label for="firstName">first name</label>
                    <input name="firstName" id="firstName" value="<%= messages.firstName %>" type="text" placeholder="enter your first name">
                </div>
                <div class="input">
                    <label for="lastName">last name</label>
                    <input id="lastName" name="lastName" value="<%= messages.lastName %>" type="text" placeholder="enter your last name">
                 </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <label for="fatherName">first name</label>
                    <input name="fatherName" id="fatherName" value="<%= messages.fatherName %>" type="text" placeholder="enter your father's name">
                </div>
                <div class="input">
                    <label for="mohterName">last name</label>
                    <input id="mohterName" name="mohterName" value="<%= messages.mohterName %>" type="text" placeholder="enter your mother's name">
                 </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <label for="dob">date of birth</label>
                    <input type="date" name="dob" id="dob" value="<%= messages.dob %>" type="text" placeholder="MM/DD/YYYY">
                </div>
                <div class="input">
                    <label for="uniName">university name</label>
                    <select name="uniName" id="" class="select-box">
                        <option value="University of Liberal Arts Bangladesh">University of Liberal Arts Bangladesh</option>
                        <option value="University of Khulna">University of Khulna</option>
                        <option value="University of Barishal">University of Barishal</option>
                        <option value="University of Narsingdi">University of Narsingdi</option>
                        <option value="University of Chittagong">University of Chittagong</option>
                    </select> 
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <label for="studentEmail">your email</label>
                    <input name="studentEmail" id="studentEmail" value="<%= messages.studentEmail %>" type="text" placeholder="enter your university email">
                </div>
                <div class="input">
                    <label for="studentID">your student ID</label>
                    <input id="studentID" name="studentID" value="<%= messages.studentID %>" type="text" placeholder="enter your student ID">
                 </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <label for="phone">contact number</label>
                    <input name="phone" type="phone" value="<%= messages.phone %>" type="text" placeholder="enter your contact number">
                </div>
                <div class="input">
                    <label for="address">address</label>
                    <input id="address" name="address" value="<%= messages.address %>" type="text" placeholder="enter your present address">
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <label for="password">password</label>
                    <input id="password" name="password" value="" type="password" placeholder="****************">
                </div>
                <div class="input">
                    <label for="confirmPass">confirm password</label>
                    <input id="confirmPass" name="confirmPass" value="" type="password" placeholder="*****************">
                </div>
            </div>
        
            <button type="submit" class="btn">Registration</button>
            <a href="/student/login">Already have account?</a>
            <a class="float-right mt-6" href="/registration">Go Back</a>
        </form>
        
    </section>
    <!-- registration section end -->