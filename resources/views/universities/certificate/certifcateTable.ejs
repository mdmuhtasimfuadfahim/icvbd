<section class="home-content" style= "margin-left:240px" >
  <h3 class="sub-heading"> List of Approved Certificates </h3>
  <h1 class="heading"> List of "<%= user.uniName %>" certificates </h1>
  <div class="table-wrapper">
    <div class="new-table w-full mx-auto table-certificate">
      
      <div class="table-row table-header">
        <div class="cell">
          Serial Number
        </div>
        <div class="cell">
          Full Name
        </div>
        <div class="cell">
          Student Email
        </div>
        <div class="cell">
          Student ID
        </div>
        <div class="cell">
          Credit
        </div>
        <div class="cell">
          Courses
        </div>
        <div class="cell">
          University Name
        </div>
        <div class="cell">
          Major
        </div>
        <div class="cell">
          CGPA
        </div>
        <div class="cell">
          Minor
        </div>
        <div class="cell">
          Date of Birth
        </div>
        <div class="cell">
          Gender
        </div>
        <div class="cell">
          Date of Admission
        </div>
        <div class="cell">
          Date of Graduation
        </div>
        <div class="cell">
          Created Date
        </div>
        <div class="cell">
          Updated Date
        </div>
        <div class="cell">
          Action
        </div>
      </div>
      
      <% for(var i = 0; i < certificate.length; i++) { %>
      <div class="table-row table-body">
        <div class="cell" data-title="Serial Number">
          <%= i + 1 %>
        </div>
        <div class="cell" data-title="Full Name">
          <%= certificate[i].full_name %>
        </div>
        <div class="cell" data-title="Student Email">
          <%= certificate[i].email_address %>
        </div>
        <div class="cell" data-title="Student ID">
          <%= certificate[i].student_id %>
        </div>
        <div class="cell" data-title="Credit">
          <%= certificate[i].credit %>
        </div>
        <div class="cell" data-title="Courses">
          <%= certificate[i].courses %>
        </div>
        <div class="cell" data-title="University Name">
          <%= certificate[i].university_name %>
        </div>
        <div class="cell" data-title="Major">
          <%= certificate[i].major %>
        </div>
        <div class="cell" data-title="CGPA">
          <%= certificate[i].cgpa %>
        </div>
        <div class="cell" data-title="Minor">
          <%= certificate[i].minor %>
        </div>
        <div class="cell" data-title="Date of Birth">
          <%= certificate[i].dob_d %>/<%= certificate[i].dob_m %>/<%= certificate[i].dob_y %>
        </div>
        <div class="cell" data-title="Gender">
          <%= certificate[i].gender %>
        </div>
        <div class="cell" data-title="Date of Admission">
          <%= certificate[i].doa_d %>/<%= certificate[i].doa_m %>/<%= certificate[i].doa_y %>
        </div>
        <div class="cell" data-title="Date of Graduation">
          <%= certificate[i].dog_d %>/<%= certificate[i].dog_m %>/<%= certificate[i].dog_y %>
        </div>
        <div class="cell" data-title="Created Date">
          <%= moment(certificate[i].createdAt).format('DD:MM:YYYY') %>
        </div>
        <div class="cell" data-title="Updated Date">
          <%= moment(certificate[i].updatedAt).format('DD:MM:YYYY') %>
        </div>
        <div class="cell" data-title="Action">
          <a href="/university/certificate/update_form?id=<%= certificate[i]._id %>" class="btn border-shadow update">
            <i class="fas fa-user-edit"></i></a>
            <a class="btn border-shadow delete" data-id=<%= certificate[i]._id %> >
              <i class="fas fa-times"></i>
          </a>
          <a class="btn border-shadow read" href="/university/certificate/read/read_from?id=<%= certificate[i]._id %>" >
            <i class="fas fa-book-reader"></i>
        </a>
        </div>
      </div> 
      <% } %>     
    </div>    
  </div>
</section>
